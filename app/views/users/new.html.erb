<div class="row bg">
  <div class="col-xs-4 col-md-offset-4">
    <%= bootstrap_form_for :user, url: users_path do |f| %>
    
    <% if @user.errors.any? %>
    <div class="alert alert-danger ">
    <h1>Errors:</h1>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li>          
              <%= message %>
      </li>
      <% end %>
    </ul>
    </div>
   
    <% end %>
    <div class= "form-signin">
    <h1><center>Sign Up</center></h1>
    <div class=" form-group form-group-lg ">
      <%= f.text_field :name , placeholder: "name"%><br>

      <%= f.email_field :email, placeholder: "email " %><br>

      <%= f.date_field :dob %><br>

      <%= f.password_field :password, placeholder: "password" %><br>

      <%= f.password_field :password_confirmation, placeholder: "confirm password" %><br>
      <br>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
    </div>
  </div>
</div>
